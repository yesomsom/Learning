{
  "compilerOptions": {
    "strict": true,
    "target": "es6", // 빌드 결과물을 es6 방식으로
    "module": "commonjs", // 모듈 방식을 commonjs 방식으로
    "moduleResolution": "node",// 모듈 해석 방식을 node 처럼 함
    "sourceMap": true, // .map.js 파일도 함께 생성
    "emitDecoratorMetadata": true, // Enables experimental support for ES7 decorators. 
    "experimentalDecorators": true,  // Enables experimental support for emitting type metadata for decorators. 
    "removeComments": false, // Do not emit comments to output.
    "noImplicitAny": false, // any로 추론되면 에러를 알려준다.
    "lib": ["ES2015","ES2016","ES2017","ES2018","ES2019","ES2020","DOM"],
    "outDir": "./dist",
    "esModuleInterop": true
  },
  "exclude": [ // npm 으로 설치한 모듈들을 import 가능하도록 설정
    "node_modules"
  ],
  "include": ["src/**/*"]
}